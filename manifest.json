{
  "manifest_version": 3,
  "name": "Pro Drifters 3D",
  "description": "Drive detailed 3D cars with physics, AI traffic, scoring, and power-ups inside the extension popup.",
  "version": "1.0.0",
  "action": {
    "default_title": "Pro Drifters 3D",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "offline_enabled": true
}
